<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Helloworld.StackPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
            iOS="0,20,0,0"
            WinPhone="0,30,0,0">
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout>
        <StackLayout>
            <Label Text="Nyc photographer"/>
            <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
        </StackLayout>
        <StackLayout Orientation="Horizontal"
                     Padding="10,20,10,20">
            <Button Text="Like"/>
            <Button Text="Comment"/>
            <Button Text="Share"/>
        </StackLayout>
        <StackLayout Padding="10,20,10,20">
            <Line Aspect="UniformToFill"
                   Opacity="100"/>
            <Label Text="700 Likes"
                   FontAttributes="Bold"/>
            <Label Text="This is a chjot yesterday in Skanor, Sweeden, when driving home, from a couple of days of work in Danemark." />
        </StackLayout>
    </StackLayout>
</ContentPage>